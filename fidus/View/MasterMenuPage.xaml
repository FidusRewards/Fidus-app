<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fidus.MasterMenuPage"
             Padding="0,50,0,0"
             Icon="Icon.png"
             Title="Web Components"
             >
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand">
      <StackLayout >
        <Image Source="userimg.png"
               HeightRequest="70"
               WidthRequest="70" 
               HorizontalOptions="Start"
               Margin="0,0,20,0"/>
      </StackLayout>   
      <StackLayout>
      <ListView x:Name="listView" VerticalOptions="FillAndExpand" SeparatorVisibility="None">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell Text="{Binding Title}" TextColor="{Binding TextColor}" ImageSource="{Binding IconSource}"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>